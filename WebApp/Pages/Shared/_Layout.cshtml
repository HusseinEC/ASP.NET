<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    @if (!string.IsNullOrWhiteSpace(ViewData["Title"]?.ToString()))
    {
        <title>@ViewData["Title"] - Silicon</title>
    }
    else
    {
        <title>Silicon</title>
    }

    <script defer src="https://kit.fontawesome.com/41c8b474e2.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.scss" asp-append-version="true" />

</head>
<body>
    <div class="wrapper">
        <partial name="~/Pages/Sections/_HeaderPartial.cshtml" />
        <main>
            @RenderBody()
        </main>
        <partial name="~/Pages/Sections/_FooterPartial.cshtml" />

        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="https://kit.fontawesome.com/41c8b474e2.js" crossorigin="anonymous" "></script>
    </div>
</body>
</html>